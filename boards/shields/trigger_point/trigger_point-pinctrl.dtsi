#include <zephyr/dt-bindings/pinctrl/nrf-pinctrl.h>
#include <zephyr/dt-bindings/led/led.h>

/* ===========================
 *  PINCTRL CONFIGURATIONS
 * =========================== */
&pinctrl {
    /* ---- I2C Configuration ---- */
    i2c0_default: i2c0_default {
        group1 {
            /* SDA: P0.20, SCL: P0.17 */
            psels = <NRF_PSEL(TWIM_SDA, 0, 20)>,
                    <NRF_PSEL(TWIM_SCL, 0, 17)>;
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 20)>,
                    <NRF_PSEL(TWIM_SCL, 0, 17)>;
            low-power-enable;
        };
    };

    /* ---- SPI Configuration for WS2812 RGB LED ---- */
    spi1_ws2812_default: spi1_ws2812_default {
        group1 {
            /* MOSI = P1.07 (LED data), SCK = P0.02 (dummy) */
            psels = <NRF_PSEL(SPIM_MOSI, 1, 7)>,
                    <NRF_PSEL(SPIM_SCK,  0, 2)>;
        };
    };
};

