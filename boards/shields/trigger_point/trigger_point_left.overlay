#include <dt-bindings/zmk/matrix_transform.h>
#include <zephyr/dt-bindings/gpio/gpio.h>

/ {
    chosen {
        zmk,kscan            = &kscan0;
        zmk,matrix_transform = &tmap;
    };

    kscan0: kscan_matrix {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;
        /* Try your ACTUAL diode orientation first. 
         * If your diode stripe (cathode) is on the COLUMN side,
         * start with "row2col". If stripe is on the ROW side, use "col2row".
         */
        diode-direction = "row2col";

        /* ONE row, ONE column for the test */
        row-gpios = <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        col-gpios = <&pro_micro 19 GPIO_ACTIVE_HIGH>;
    };

    /* 1Ã—1 transform */
    tmap: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        rows = <1>;
        columns = <1>;
        map = <RC(0,0)>;
    };
};

